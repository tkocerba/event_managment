<%= form_for user do |f| %>
<%= render 'shared/errors', object: @user %> 
<div class="form-group row">
  <div class="col-2">
    <%= f.label :name, class: 'col-form-label' %>
  </div>
  <div class="col-10">
    <%= f.text_field :name, class: 'form-control' %>
  </div>
</div>

<div class="form-group row">
  <div class="col-2">
    <%= f.label :email, class: 'col-form-label' %>
  </div>
  <div class="col-10">
    <%= f.email_field :email, class: 'form-control' %>
  </div>
</div>

<div class="form-group row">
  <div class="col-2">
    <%= f.label :password, class: 'col-form-label' %>
  </div>
  <div class="col-10">
    <%= f.password_field :password, class: 'form-control' %>
  </div>
</div>

<div class="form-group row">
  <div class="col-2">
    <%= f.label :password_confirmation, class: 'col-form-label' %>
  </div>
  <div class="col-10">
    <%= f.password_field :password_confirmation, class: 'form-control' %>
  </div>
</div>

<div class="form-group row">
  <div class="offset-2 col-10">
    <%= f.submit 'Register', class: 'btn btn-primary btn-sm' %>
  </div>
</div>
<% end %>