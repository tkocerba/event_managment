<%= form_for [category, event] do |f| %>
  <%= render 'shared/errors', object: event %> 
  <div class="form-group row">
    <div class="col-2">
      <%= f.label :title, class: 'col-form-label' %>
    </div>
    <div class="col-10">
      <%= f.text_field :title, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-2">
      <%= f.label :description, class: 'col-form-label' %>
    </div>
    <div class="col-10">
      <%= f.text_area :description, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-2">
      <%= f.label :starts_at, class: 'col-form-label' %>
    </div>
    <div class="col-10">
      <%= f.datetime_select :starts_at, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-2">
      <%= f.label :ends_at, class: 'col-form-label' %>
    </div>
    <div class="col-10">
      <%= f.datetime_select :ends_at, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <div class="offset-2 col-10">
      <%= f.submit 'Add new event!', class: 'btn btn-primary btn-sm' %>
    </div>
  </div>
<% end %>